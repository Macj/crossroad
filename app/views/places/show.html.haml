= render :partial => '/main/map_includes'
= javascript_include_tag "behavior/places/map_behavior"
.main_block
  #picture
    = link_to image_tag(@place.picture.url(:medium)), place_path(@place)
  #place_name
    %span= @place.name
  #place_info
    %span= @place.category.name
    %br
    %span= @place.type.name
  #place_map
    #map_container
  #place_body
    %span= @place.description
  #place_source
    %span= @place.web_links
    %br
    %span= @place.created_at.strftime(" %H:%M %d.%m.%Y")