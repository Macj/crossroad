.main_block
  #picture
    = link_to image_tag(@article.picture.url(:medium)), article_path(@article)
  #article_name
    %span= @article.name
  #article_info
    %span= @article.category.name
    %br
    %span= @article.type.name if @article.type
    %br
    %span= @article.autor
  #article_body
    %span= @article.body
  #article_source
    %span= @article.sources
    %br
    %span= @article.created_at.strftime(" %H:%M %d.%m.%Y")