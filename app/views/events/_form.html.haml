= javascript_include_tag "tools/datepicker"
= javascript_include_tag "behavior/events/form_behavior"
= stylesheet_link_tag    "form", :media => "all"
= flash[:errors]

= form_for  event || Event.new,  :as => :event do |f|
  = f.label :category_id, 'Категория'
  = f.select :category_id, Category.all.map{|e| [e.name, e.id]}
  %br
  = f.label :type_id, 'Тип'
  = f.select :type_id, ['']
  %img.plus#event_type_plus_btn{:src => '/images/plus.png'}
  #event_new_type_fields.hidden
    = text_field_tag(:event_type_name, nil, :id => 'event_type_name',:placeholder => 'введите название типа')
    = f.submit "Добавить", :id => 'event_add_type'
  %br
  %br
  = f.label :name, 'Название'
  = f.text_field :name
  %br
  = f.label :begin_date, 'дата начала'
  = f.text_field :begin_date, :placeholder => 'xx.xx.xxxx'
  %br
  = f.label :end_date, 'дата конца'
  = f.text_field :end_date, :placeholder => 'xx.xx.xxxx'
  %br
  = f.label :description, 'Описание'
  = f.text_area :description, :class => "tinymce"
  %br
  = f.label :web_links, 'Источники'
  = f.text_area :web_links
  %br
  = f.label :picture, 'Афиша'
  = f.file_field :picture
  %br
  = f.submit "Сохраніть"
