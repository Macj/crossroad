= javascript_include_tag "behavior/_filters"
= javascript_include_tag "tools/datepicker"
.filters
  %span= 'Фильтры'
  #data_filter
    %span= 'По дате'
    .date_block
      %label От
      %input{:name => 'start_at', :id => 'start_at'}
      .date_btn
    .date_block
      %label До
      %input{:name => 'end_at', :id => 'end_at'}
      .date_btn
  #type_filter
    - if types
      %span= 'По типу'
      = select_tag "type_id", options_from_collection_for_select(types, "id", "name"), {include_blank: true}